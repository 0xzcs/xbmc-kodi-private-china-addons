<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.bangumi" name="Bangumi beta" version="0.1.1" provider-name="zhengfan">
  <requires>
    <import addon="xbmc.python" version="2.1.0"/>
    <import addon="script.module.xbmcswift2" version="2.4.0"/>
  <import addon="script.module.beautifulsoup4" version="4.5.3"/>
  <import addon="script.module.requests" version="2.19.1"/>
  <import addon="script.module.html5lib" version="0.999.0"/>
  <import addon="script.module.cfscrape" version="1.6.9"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="addon.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <platform>all</platform>
    <language></language>
    <description>bangumi插件是一个番剧网站聚合插件，它是vid插件的改进版，为适配番剧网站而生</description>
    <assets>
      <icon>icon.png</icon>
      <fanart>fanart.png</fanart> 
    </assets>
    <news>首个版本</news>
  </extension>
</addon>
